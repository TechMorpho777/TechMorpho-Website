FROM node:18-alpine

# Install build dependencies for native modules
RUN apk add --no-cache python3 make g++

WORKDIR /app

# Copy package files
COPY package.json ./

# Copy Prisma schema (needed for postinstall script)
COPY prisma ./prisma

# Install dependencies
RUN npm install --legacy-peer-deps || npm install

# Copy source code
COPY . .

# Generate Prisma Client (if not already generated by postinstall)
RUN npx prisma generate || true

# Build TypeScript
RUN npm run build

# Expose port
EXPOSE 3000

# Start server
CMD ["npm", "start"]

