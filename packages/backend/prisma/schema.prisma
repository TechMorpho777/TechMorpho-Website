// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  service   String
  message   String
  status    String   @default("new") // new, contacted, resolved, archived
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
  @@index([status])
}

model Service {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  content     String?  @db.Text // Legacy rich text content (kept for backward compatibility)
  sections    Json?    // Array of content sections with title and content
  heroBanner  Json?    // Hero banner data: { title, subtitle, image, showBreadcrumb }
  icon        String?  // SVG path or icon name
  features    String[] // Array of features
  tag         String?  // Popular, Trending, etc.
  category    String?  // Optional category for grouping services
  featured    Boolean  @default(false)
  order       Int      @default(0)
  active      Boolean  @default(true)
  showInNav   Boolean  @default(false) // Control if service appears in navigation
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([active])
  @@index([category])
  @@index([showInNav])
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed password
  name      String
  role      String   @default("admin") // admin, super_admin
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  type      String   @default("text") // text, json, boolean, number
  category  String   @default("general") // general, seo, analytics, social
  updatedAt DateTime @updatedAt

  @@index([key])
  @@index([category])
}

